      resultsList.innerHTML = '';/////////////Limpiar lista antes de agregar nuevos resultados//////////////////
      if (results.length > 0) {results.forEach((cel) => {let li = document.createElement("li");
        li.textContent = `${cel.oem} - ${cel.model}`;
        li.classList.add("cursor-pointer", "hover:bg-blue-100", "px-4", "py-2", "text-black", "font-medium");
      //////////////////Evento para seleccionar un celular///////////////
        li.addEventListener("click", () => {
      /////////////// Si ya hay dos dispositivos seleccionados, reiniciar la selección////////////////////
      if (selectedDevices.length >= 2) {selectedDevices = [];}
      //////////////////Agregar el nuevo dispositivo//////////////////////////
        selectedDevices.push(cel);
      //////////////////Asignar a la primera carta disponible/////////////////
      if (selectedDevices.length === 1 && device1) {actualizarCarta(device1, cel);} 
        else if (selectedDevices.length === 2 && device2) {
          actualizarCarta(device2, cel);}
      /////////////////////Llamar a la función para actualizar nombres y precios////////////////
          actualizarNombresYPrecios();
      ////////////////////// Limpiar input y sugerencias//////////////////////////////////
          searchElement.value = '';
          resultsList.innerHTML = '';
          resultsList.classList.add("hidden");  
      ////////////////////Llamar a la función para actualizar la gráfica/////////////////////
      if (selectedDevices.length === 2) {actualizarGrafica();}});
          resultsList.appendChild(li);});
          resultsList.classList.remove("hidden"); // Mostrar resultados
          }else{
          resultsList.classList.add("hidden"); // Ocultar si no hay resultados
          }});
        // Ocultar sugerencias si el usuario hace clic fuera del input
        document.addEventListener("click", (e) => {
            if (!searchElement.contains(e.target) && !resultsList.contains(e.target)) {
                resultsList.classList.add("hidden");
            }
        });
    }
  ///////////Eventos para las cartas y manejo de los datos(fin///////////////


  ///////////Función para actualizar una carta con datos del celular seleccionado/////
  function actualizarCarta(carta, celular) {
        if (!carta) return;
          let titulo = carta.querySelector("h4");
        if (titulo) {
          titulo.textContent = `${celular.oem ?? "Desconocido"} - ${celular.model ?? "Sin modelo"}`;
        }
          let detalles = carta.querySelectorAll("nav div");
        if (!detalles || detalles.length < 10) return;
        //Manterner la estructura!!!!
        detalles[0].innerHTML = `<span class="font-bold text-blue-300">Pantalla:</span> ${celular.display_size ?? "No disponible"} - ${celular.display_resolution ?? ""}`;
        detalles[1].innerHTML = `<span class="font-bold text-blue-300">Procesador:</span> ${celular.platform_cpu ?? "No disponible"}`;
        detalles[2].innerHTML = `<span class="font-bold text-blue-300">Memoria RAM:</span> ${celular.memory_internal ? celular.memory_internal.split(" ")[1] : "No disponible"}`;
        detalles[3].innerHTML = `<span class="font-bold text-blue-300">Almacenamiento:</span> ${celular.memory_internal ? celular.memory_internal.split(" ")[0] : "No disponible"}`;
        detalles[4].innerHTML = `<span class="font-bold text-blue-300">Cámara Trasera:</span> ${celular.main_camera_dual ?? "No disponible"}`;
        detalles[5].innerHTML = `<span class="font-bold text-blue-300">Cámara Frontal:</span> ${celular.selfie_camera_dual ?? "No disponible"}`;
