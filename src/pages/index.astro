  //////////Función para actualizar los nombres y precios en el HTML////////////
  function actualizarNombresYPrecios() {
  ////////Verificar que ambos dispositivos estén seleccionados///////////
    if (selectedDevices.length === 2) {
      //////////////////Función para limpiar y formatear el precio
      function limpiarPrecio(precio) {
        let precioLimpio = precio.trim();// Eliminar espacios adicionales y caracteres extraños (incluyendo códigos Unicode como <e2>, <c2>, etc.)
          precioLimpio = precioLimpio.replace(/[\u200B-\u200D\uFEFF\u00A0\u200E\u200F\u202A-\u202E\u2060\u202F\u00A3]/g, '');// Eliminar caracteres Unicode extraños
            precioLimpio = precioLimpio.replace(/[^0-9,.-]/g, '');// Eliminar símbolos de moneda (como €, $, etc.)
              precioLimpio = precioLimpio.replace(",", ".");// Reemplazar coma por punto para decimales si es necesario
                let precioFloat = parseFloat(precioLimpio);// Convertir a número flotante
                  if (!isNaN(precioFloat)) {// Asegurarse de que es un número válido
                    let precioEntero = Math.floor(precioFloat);// Truncar a 4 dígitos enteros
                      precioEntero = parseInt(precioEntero.toString().slice(0, 4));//Limitar el precio a 4 dígitos
                        return new Intl.NumberFormat('es-ES', {style: 'currency', currency: 'EUR'}).format(precioEntero);// Devolver el precio formateado sin decimales
    } else {
      return "Precio no disponible";
        }
