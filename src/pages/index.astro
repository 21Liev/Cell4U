    document.querySelector("#device2-name").textContent = selectedDevices[1].model;
    document.querySelector("#device2-price").textContent = limpiarPrecio(selectedDevices[1].misc_price);
    }
  }
  //////////Función para actualizar los nombres y precios en el HTML(fin)  ////////
    }).catch(error => console.error("❌ Error al cargar el JSON:", error));
