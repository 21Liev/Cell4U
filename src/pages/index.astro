  /////Eventos para las cartas y manejo de los datos///////////////
  if (searchElement && resultsList) {searchElement.addEventListener("input", function () {
    let query = searchElement.value.trim().toLowerCase();
      ///////////////Limpiar sugerencias si no hay texto////////
      if (query.length === 0) {
        resultsList.innerHTML = '';
        resultsList.classList.add("hidden");
        return;
      }
